{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",

    "strict": false,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,

    "typeRoots": [ "node_modules/@types", "./@types" ]
  },
  "include": [ "src/**/*" ],
  "exclude": [".DS_Store"]
}
